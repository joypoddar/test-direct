#!/usr/bin/env sh
protected_branches="main dev"

while read local_ref local_sha remote_ref remote_sha
do
  for branch in $protected_branches; do
    if echo "$remote_ref" | grep -q "refs/heads/$branch"; then
      echo "ğŸš¨ Direct push to '$branch' branch is disabled."
      echo "ğŸ™ Please use a pull request."
      echo "ğŸ”— https://github.com/okahu/portal-ux/pulls"
      exit 1
    fi
  done
done

exit 0

npm run build